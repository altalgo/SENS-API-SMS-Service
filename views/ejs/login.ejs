<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        input:focus {
            outline: none;
        }

        #wrapper {
            width: 1000px;
            margin: 249.6px auto;
            text-align: center;
        }

        #logo {
            width: 457px;
            margin: 0 auto;
        }

        #logo img {
            width: 100%;
            height: 100%;
        }

        #login__wrapper {
            display: inline-block;
        }

        input {
            display: block;
            width: 290px;
            height: 36px;
            margin-top: 6px;
            border:none;
            border-bottom: 1px solid silver;
            padding-left: 14px;
        }

        input:last-child {
            margin:17px auto 0 auto;
            border: none;
            padding-left:6px;
        }
    </style>
</head>

<body>
    <div id="wrapper">
        <div id="logo">
            <img src="../img/suapc2020.png" draggable="false">
        </div>
        <form action="../chkuser" method="post" onsubmit="chkval()">
            <div id="login__wrapper">
                <input type="text" name="id" placeholder="아이디" autocomplete="off">
                <input type="password" name="pw" placeholder="비밀번호" autocomplete="off">
                <input type="submit" value="로그인" style="cursor: pointer;">
            </div>
        </form>
    </div>
    <script>
        function chkval(){
            if(document.getElementsByName('id')[0].value ==""){
                alert('아이디를 입력해주세요')
                return false;
            }else if(document.getElementsByName('pw')[0].value==""){
                alert('비밀번호를 입력해주세요')
                return false;
            }else{
                document.getElementsByTagName('form')[0].submit();
            }
        }
    </script>
</body>

</html>